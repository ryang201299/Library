<div class="container">
    @for (int i = 0; i < Model.Books.Count; i += 4) {
        <div class="row my-5">
            @for (int j = i; j < Math.Min(i + 4, Model.Books.Count); j++) {
                <div class="col-3">
                    <div class="card">
                        <div style="max-height: 400px; overflow: hidden;">
                            <img class="card-img-top" src="@Model.Books[j].ImageLocation" style="object-fit: cover; width: 100%; height: 100%;" alt="Book Image">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@Model.Books[j].Name</h5>
                            <div class="d-none d-md-block">
                                <p class="card-text">@Model.Books[j].ShortDescription</p>
                            </div>
                            <a href="#" class="btn btn-primary mt-3">Detail</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
